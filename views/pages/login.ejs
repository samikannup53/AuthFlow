<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include('../partials/head') %>
  <!-- Body -->
  <body
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-yellow-100 via-orange-100 to-pink-200 px-4"
  >
    <!-- Glass Card -->
    <div
      class="relative w-full max-w-md sm:max-w-sm md:max-w-md p-6 sm:p-8 md:p-10 rounded-3xl bg-white/30 backdrop-blur-xl border border-white/20 shadow-2xl transition-all duration-300 hover:shadow-[0_10px_60px_rgba(0,0,0,0.2)]"
    >
      <!-- Back Button -->
      <span
        class="absolute top-4 left-4 sm:top-5 sm:left-5 text-orange-600 flex items-center gap-2 hover:text-orange-500 transition-all duration-200 ease-in-out"
      >
        <i class="fas fa-chevron-left text-sm sm:text-base"></i>
        <a href="/" class="text-sm sm:text-base">Back</a>
      </span>

      <!-- Icon -->
      <div class="flex justify-center mb-6 mt-4 sm:mt-0">
        <div
          class="w-16 h-16 sm:w-20 sm:h-20 flex items-center justify-center bg-orange-500 rounded-full text-white shadow-md"
        >
          <i class="fas fa-user text-2xl sm:text-3xl"></i>
        </div>
      </div>

      <!-- Heading -->
      <h2
        class="text-2xl sm:text-3xl font-semibold text-gray-800 text-center mb-3 sm:mb-4"
      >
        Welcome Back
      </h2>
      <p class="text-sm sm:text-base text-gray-600 text-center mb-6 sm:mb-8">
        Login to your
        <span class="text-orange-600 font-medium">AuthFlow</span> account
      </p>

      <!-- Login Form -->
      <form class="space-y-4 sm:space-y-5">
        <!-- Email -->
        <div
          class="flex items-center gap-3 border border-gray-300 rounded-full bg-white/70 px-4 py-2 sm:py-2.5 transition duration-200 focus-within:border-orange-500 focus-within:border focus-within:bg-white"
        >
          <i class="fas fa-envelope text-orange-500 text-sm sm:text-base"></i>
          <input
            type="email"
            placeholder="Email"
            class="flex-1 bg-transparent text-gray-700 placeholder-gray-500 focus:outline-none text-sm sm:text-base"
          />
        </div>

        <!-- Password Field -->
        <div class="relative">
          <div
            class="flex items-center border border-gray-300 rounded-full bg-white/70 px-4 py-2 transition duration-200 focus-within:border-orange-500 focus-within:bg-white"
          >
            <i class="fas fa-lock text-orange-500"></i>
            <input
              id="password"
              type="password"
              placeholder="Password"
              class="flex-1 bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none ml-3 text-sm sm:text-base"
            />
          </div>
          <span
            class="absolute right-4 top-1/2 transform -translate-y-1/2 cursor-pointer text-gray-600"
            onclick="togglePassword('password', this)"
          >
            <i class="fas fa-eye"></i>
          </span>
        </div>

        <!-- Sign In Button -->
        <button
          type="submit"
          class="w-full flex items-center justify-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-medium py-2.5 rounded-full shadow-lg transition-all duration-300 text-sm sm:text-base"
        >
          <i class="fas fa-sign-in-alt"></i>
          Sign In
        </button>

        <!-- Forgot Password Link -->
        <div class="text-center mt-2 sm:mt-3">
          <a
            href=""
            class="text-xs sm:text-sm text-gray-600 hover:underline font-medium"
          >
            Forgot Password?
          </a>
        </div>

        <!-- Register Link -->
        <p class="text-xs sm:text-sm text-gray-700 text-center mt-3 sm:mt-4">
          Donâ€™t have an account?
          <a
            href="/users/register"
            class="text-orange-600 hover:underline font-medium"
          >
            Register
          </a>
        </p>
      </form>
    </div>

    <script>
      function togglePassword(id, el) {
        const input = document.getElementById(id);
        const icon = el.querySelector("i");

        if (input.type === "password") {
          input.type = "text";
          icon.classList.remove("fa-eye");
          icon.classList.add("fa-eye-slash");
        } else {
          input.type = "password";
          icon.classList.remove("fa-eye-slash");
          icon.classList.add("fa-eye");
        }
      }
    </script>
  </body>
</html>
