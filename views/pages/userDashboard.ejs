<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body
    class="min-h-screen bg-gradient-to-br from-yellow-100 via-orange-100 to-pink-200 flex"
  >
    <!-- Sidebar -->
    <div class="w-64 bg-orange-700 text-white p-4 flex flex-col shadow-lg">
      <!-- Avatar & Username -->
      <div class="flex items-center space-x-3 mb-8">
        <img
          src="https://i.pravatar.cc/100?u=user"
          alt="User Avatar"
          class="w-12 h-12 rounded-full shadow-md"
        />
        <div>
          <h2 class="font-bold text-lg"><%= userName %></h2>
          <p class="text-sm text-gray-200"><%= email %></p>
        </div>
      </div>
      <ul class="space-y-4">
        <li>
          <a
            href="#"
            class="hover:bg-orange-500 py-2 px-4 rounded-full transition flex items-center gap-3"
          >
            <i class="fas fa-home text-lg"></i>
            <span>Home</span>
          </a>
        </li>
        <li>
          <a
            href="#"
            class="hover:bg-orange-500 py-2 px-4 rounded-full transition flex items-center gap-3"
          >
            <i class="fas fa-user-circle text-lg"></i>
            <span>Profile</span>
          </a>
        </li>
        <li>
          <a
            href="#"
            class="hover:bg-orange-500 py-2 px-4 rounded-full transition flex items-center gap-3"
          >
            <i class="fas fa-cogs text-lg"></i>
            <span>Settings</span>
          </a>
        </li>
      </ul>
      <div
        class="mt-auto pt-6 border-t border-orange-500 text-sm text-gray-200 text-center"
      >
        <i class="fas fa-shield-alt mr-1 text-green-300"></i>
        Secured with JWT
      </div>
    </div>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col">
      <!-- Header -->
      <header
        class="flex justify-between items-center px-6 py-4 border-b border-white/30 bg-white/30 backdrop-blur-md shadow-md"
      >
        <h1 class="text-xl font-semibold text-gray-800">Dashboard</h1>
        <a
          href="/user/logout"
          class="text-orange-500 hover:text-orange-600 text-2xl transition"
        >
          <i class="fas fa-sign-out-alt"></i>
        </a>
      </header>

      <!-- Dashboard Card -->
      <section
        class="flex-1 flex flex-col justify-center items-center px-4 py-10"
      >
        <div
          class="w-full max-w-2xl bg-white/40 backdrop-blur-lg border border-white/20 rounded-2xl shadow-xl p-8 text-center"
        >
          <img
            src="https://i.pravatar.cc/100?u=user"
            alt="User Avatar"
            class="mx-auto mb-6 w-24 h-24 rounded-full shadow-md"
          />
          <h2 class="text-2xl font-semibold text-gray-800 mb-1">
            <%= userName %>
          </h2>
          <p class="text-gray-600 text-sm mb-4"><%= email %></p>

          <!-- Badge -->
          <div
            class="inline-flex items-center bg-green-100 text-green-700 px-4 py-1 rounded-full text-sm font-medium mb-6 shadow-sm"
          >
            <i class="fas fa-check-circle mr-2 text-green-500"></i>
            Verified Account
          </div>

          <!-- Welcome Message -->
          <p class="text-gray-700 mb-6">
            Welcome to your personalized dashboard powered by
            <span class="text-orange-600 font-semibold">AuthFlow</span>.
          </p>

          <!-- Logout Button -->
          <a
            href="/user/logout"
            class="inline-flex items-center justify-center px-6 py-2 bg-orange-500 hover:bg-orange-600 text-white rounded-full shadow-md transition"
          >
            <i class="fas fa-sign-out-alt mr-2"></i> Logout
          </a>
        </div>

        <!-- Quote -->
        <p
          class="mt-10 max-w-xl text-center text-gray-700 italic text-base px-4"
        >
          "AuthFlow simplifies your authentication process with seamless login
          and JWT-based security."
        </p>
      </section>
    </main>
  </body>
</html>
