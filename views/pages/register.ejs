<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include('../partials/head') %>
  <!-- Body -->
  <body
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-yellow-100 via-orange-100 to-pink-200 px-4"
  >
    <!-- Register Card -->
    <div
      class="w-full max-w-md sm:max-w-sm md:max-w-md p-6 sm:p-8 md:p-10 rounded-2xl backdrop-blur-md bg-white/30 border border-white/20 shadow-2xl flex flex-col items-center relative"
    >
      <!-- Back Button -->
      <a
        href="/"
        class="absolute top-4 left-4 sm:top-5 sm:left-5 text-orange-600 text-sm sm:text-base flex items-center gap-2 hover:text-orange-500 transition"
      >
        <i class="fas fa-chevron-left text-xs sm:text-sm"></i> Back
      </a>

      <!-- Icon -->
      <div
        class="w-20 h-20 sm:w-24 sm:h-24 flex items-center justify-center mb-6 bg-orange-500 rounded-full text-white"
      >
        <i class="fas fa-user-plus text-2xl sm:text-3xl"></i>
      </div>

      <!-- Heading -->
      <h1 class="text-xl sm:text-2xl font-bold text-gray-800 mb-5 text-center">
        Create an Account
      </h1>

      <!-- Register Form -->
      <form class="w-full space-y-4 sm:space-y-5">
        <!-- Full Name -->
        <div
          class="flex items-center border border-gray-300 rounded-full bg-white/70 px-4 py-2 transition duration-200 focus-within:border-orange-500 focus-within:bg-white"
        >
          <i class="fas fa-user text-orange-500"></i>
          <input
            type="text"
            placeholder="Full Name"
            class="flex-1 bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none ml-3 text-sm sm:text-base"
          />
        </div>

        <!-- Email -->
        <div
          class="flex items-center border border-gray-300 rounded-full bg-white/70 px-4 py-2 transition duration-200 focus-within:border-orange-500 focus-within:bg-white"
        >
          <i class="fas fa-envelope text-orange-500"></i>
          <input
            type="email"
            placeholder="Email"
            class="flex-1 bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none ml-3 text-sm sm:text-base"
          />
        </div>

        <!-- Password Field -->
        <div class="relative">
          <div
            class="flex items-center border border-gray-300 rounded-full bg-white/70 px-4 py-2 transition duration-200 focus-within:border-orange-500 focus-within:bg-white"
          >
            <i class="fas fa-lock text-orange-500"></i>
            <input
              id="password"
              type="password"
              placeholder="Password"
              class="flex-1 bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none ml-3 text-sm sm:text-base"
            />
          </div>
          <span
            class="absolute right-4 top-1/2 transform -translate-y-1/2 cursor-pointer text-gray-600"
            onclick="togglePassword('password', this)"
          >
            <i class="fas fa-eye"></i>
          </span>
        </div>

        <!-- Confirm Password Field -->
        <div class="relative">
          <div
            class="flex items-center border border-gray-300 rounded-full bg-white/70 px-4 py-2 transition duration-200 focus-within:border-orange-500 focus-within:bg-white"
          >
            <i class="fas fa-lock text-orange-500"></i>
            <input
              id="confirmPassword"
              type="password"
              placeholder="Confirm Password"
              class="flex-1 bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none ml-3 text-sm sm:text-base"
            />
          </div>
          <span
            class="absolute right-4 top-1/2 transform -translate-y-1/2 cursor-pointer text-gray-600"
            onclick="togglePassword('confirmPassword', this)"
          >
            <i class="fas fa-eye"></i>
          </span>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full flex items-center justify-center gap-2 bg-orange-500 hover:bg-orange-600 text-white text-sm sm:text-base font-medium py-2.5 rounded-full shadow-md transition duration-300"
        >
          <i class="fas fa-user-plus"></i> Register
        </button>

        <!-- Login Redirect -->
        <p class="text-xs sm:text-sm text-gray-700 text-center mt-4">
          Already have an account?
          <a
            href="/users/login"
            class="text-orange-600 hover:underline font-medium"
          >
            Login
          </a>
        </p>
      </form>
    </div>

    <script>
      function togglePassword(id, el) {
        const input = document.getElementById(id);
        const icon = el.querySelector("i");

        if (input.type === "password") {
          input.type = "text";
          icon.classList.remove("fa-eye");
          icon.classList.add("fa-eye-slash");
        } else {
          input.type = "password";
          icon.classList.remove("fa-eye-slash");
          icon.classList.add("fa-eye");
        }
      }
    </script>
  </body>
</html>
