<% if (error) { %>
<!-- Error Toast Alert -->
<div class="fixed top-4 right-4 z-50 max-w-sm w-full">
  <div
    class="p-4 rounded-xl bg-red-100/70 border-b-4 border-red-600 text-red-700 text-sm flex items-start justify-between gap-3 shadow-xl backdrop-blur-md backdrop-saturate-150"
  >
    <div class="flex items-start gap-2">
      <i class="fas fa-exclamation-triangle mt-0.5 text-red-600"></i>
      <span><strong>Error:</strong> <%= error %></span>
    </div>
    <button
      onclick="this.parentElement.style.display='none'"
      class="text-red-600 font-bold text-lg leading-none hover:text-red-800 transition"
    >
      &times;
    </button>
  </div>
</div>
<% } %> 

<% if (success) { %>
<!-- Success Toast Alert -->
<div class="fixed top-4 right-4 z-50 max-w-sm w-full">
  <div
    class="p-4 rounded-xl bg-green-100/70 border-b-4 border-green-600 text-green-700 text-sm flex items-start justify-between gap-3 shadow-xl backdrop-blur-md backdrop-saturate-150"
  >
    <div class="flex items-start gap-2">
      <i class="fas fa-check-circle mt-0.5 text-green-600"></i>
      <span><strong>Success:</strong> <%= success %></span>
    </div>
    <button
      onclick="this.parentElement.style.display='none'"
      class="text-green-600 font-bold text-lg leading-none hover:text-green-800 transition"
      aria-label="Close success alert"
    >
      &times;
    </button>
  </div>
</div>
<% } %>
